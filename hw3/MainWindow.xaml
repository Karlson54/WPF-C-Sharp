<Window x:Class="hw3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw3"
        mc:Ignorable="d"
            Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="80,0" Height="400">
        <Label>How many users?</Label>
        <TextBox x:Name="Count"></TextBox>
        <Button Click="Button_Click">
            Load content
        </Button>
        <Button Click="Button_Click2">
            Select user
        </Button>
        <ListBox Height="310" Name="PackageList" DisplayMemberPath="Info"/>
    </StackPanel>
</Window>
